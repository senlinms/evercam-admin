<%= content_for(:title, "Archives") %>
<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
  <div class="page-content" id="cameras-report">
    <div class="row overlop-margin">
      <div class="dropdown-checklist" id="div-dropdown-checklist">
        <div href="#" class="btn btn-default grey" data-toggle="modal" data-target="#toggle-datatable-columns">
          <i class="fa fa-columns"></i>
        </div>
      </div>
    </div>
    <%= render 'columns_modal' %>
    <!-- BEGIN PAGE CONTENT-->
    <div id="merge-list-row" class="row dt-user-m">
      <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover archive-datatables" id="archive_datatables">
          <thead>
            <tr role="row" class="heading">
              <th name="order_exid" class="sorting">Camera</th>
              <th name="order_requested_by" class="sorting">Requested By</th>
              <th name="order_title" class="sorting">Title</th>
              <th name="order_from_date" class="sorting">From Date</th>
              <th name="order_to_date" class="sorting">To Date</th>
              <th name="order_status" class="sorting">Status</th>
              <th name="order_created_at" class="sorting">Created At</th>
              <th name="order_duration" class="sorting">Duration</th>
              <th name="order_embed_time" class="sorting">Embed Time</th>
              <th name="order_public" class="sorting">Public</th>
              <th name="order_frames" class="sorting">Frames</th>
            </tr>
          </thead>
          <tbody>
            <%=  render "archive" %>
          </tbody>
        </table>
      </div>
    <!-- END PAGE CONTENT-->
  </div>
  </div>
</div>
<!-- END CONTENT -->

<script>
  $(document).ready(function () {
    window.initializeArchives();
  });
</script>
