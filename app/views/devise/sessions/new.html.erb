<% provide(:title, "Sign in") %>
<section id="sign-in-section" class="site-min-height">
  <div class="container section">
    <div id="signin" class="col-md-12 text-center">
      <div class="bb-alert alert alert-danger" style="display:none;">
        <span></span>
      </div>
      <div class="branding margin-bottom-50">
        <%= link_to root_path, class: 'sign-in-logo' do %>
            <%= image_tag("new-logo.png", alt: "Evercam.io") %>
        <% end %>
      </div>
    </div>
    <div id="sign-in" class="col-md-4 col-md-offset-4">
      <h3 class="text-center">Sign in</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :id => "user-sign-in" }) do |f| %>
          <div class="grey col-md-8 col-md-offset-2 text-center">
            <%= f.label :email %>
            <div class="input-icon right">
              <i class="icon-user"></i>
              <%= f.text_field :email %>
            </div>
          </div>

          <div class="col-md-8 col-md-offset-2 text-center">
            <%= f.label :password %>
            <div class="input-icon right">
              <i class="icon-key"></i>
              <%= f.password_field :password %>
            </div>
          </div>

          <div class="col-md-8 col-md-offset-2">
            <div class="sign-in">
              <%= f.submit "Sign in", class: "btn btn-large btn-primary col-lg-6 col-lg-offset-3" %>
            </div>
          </div>

          <div class="col-md-8 col-md-offset-2 text-center">
            <div class="grey margin-top-20">
              I've <%= link_to "forgotten my password", new_password_path(resource_name) %>
            </div>
          </div>
      <% end %>
    </div>

    <div class="grey col-md-4 col-md-offset-4 row text-center margin-top-20">
      <p>Or <%= link_to "Create New Account", new_registration_path(resource_name) %></p>
    </div>
  </div>
</section>

<script>
    document.getElementById("session_anchor").value = window.location.hash;
    Notification.init(".bb-alert");
    <% if flash[:error] %>
    Notification.show('<%= flash[:error] %>');
    <% end %>
</script>
