  <div class="modal-dialog" style="width:500px;">
    <div class="modal-content">
      <div class="modal-header">
        <div class="caption"><strong>Make New User</strong></div>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <table class="user-table" style="width: 100%;">
            <tr>
              <td><label class="control-label">Email:</label></td>
              <td><input id="user_email" name="user_email" type="text" class="form-control"/></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <div class="pull-right">
          <button type="button" class="btn btn-default" id="make-admin">Create</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
