<% provide(:title, "Evercam: Password Reset") %>

<div class="bb-alert alert alert-info" style="display:none;">
  <span></span>
</div>
<div class="container" id="pass-reset">
  <div class="branding">
    <%= link_to image_tag("new-logo.png", alt: "Evercam.io"), root_path %>
  </div>

  <div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 panel">
      <div class="col-md-12" id="user-settings"><h4>Enter a new Password</h4></div>
      <div class="col-md-11 col-xs-12 reset-password">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'center-block' }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>
          <div class="form-group">
            <div class="input-icon right">
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "Enter Password", class: "form-control", id: "password" %>
            </div>
          </div>
          <%= f.submit "Enter", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
