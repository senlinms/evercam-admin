<div id="user-rights-modal" class="modal fade">
  <div class="modal-dialog" style="width:400px;">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h5>User Details</h5>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <table class="user-table">
            <tr>
              <td class="col-md-4"><label class="control-label">First Name:</label></td>
              <td><input data-validation-error-msg="Cannot be blank" type="text" data-validation="length" data-validation-length="min1" id="user_firstname" name="user[firstname]" class="form-control" value="<%= @user.firstname %>" autocomplete="off"/></td>
            </tr>
            <tr>
              <td class="col-md-4"><label class="control-label">Last Name:</label></td>
              <td><input data-validation-error-msg="Cannot be blank" type="text" data-validation="length" data-validation-length="min1" id="user_lastname" name="user[lastname]" class="form-control" value="<%= @user.lastname %>" autocomplete="off"/></td>
            </tr>
            <tr>
              <td class="col-md-4"><label class="control-label">Email:</label></td>
              <td><input data-validation="email" type="text" id="user_email" name="user[email]" class="form-control" value="<%= @user.email %>" autocomplete="off"/></td>
            </tr>
            <tr>
              <td class="col-md-4"><label class="control-label">Country:</label></td>
              <td>
                <select id="user_country_id" name="user[country_id]" class="form-control is-required" autocomplete="off">
                  <% @countries.each do |c| %>
                      <option value="<%= c.id -%>" <% if !@user.country.blank? &&c.name == @user.country.name %>selected="selected"<% end %>>
                        <%= c.name -%>
                      </option>
                  <% end %>
                </select>
              </td>
            </tr>
            <tr>
              <td class="col-md-4"><label class="control-label">Payment Method:</label></td>
              <td>
                <select id="user_payment_method" name="user[payment_method]" class="form-control is-required" autocomplete="off">
                  <option value="0" <% if @user.payment_method.eql?(0) %>selected="selected"<% end %>>Stripe</option>
                  <option value="1" <% if @user.payment_method.eql?(1) %>selected="selected"<% end %>>Custom</option>
                </select>
              </td>
            </tr>
            <tr>
              <td class="col-md-4"><label class="control-label">Insight ID:</label></td>
              <td><input type="text" name="user[insight_id]" class="form-control" value="<%= @user.insight_id %>" autocomplete="off"/></td>
            </tr>
            <tr>
              <td class="col-md-4"><label class="control-label">Password:</label></td>
              <td><input type="text" name="user[password]" class="form-control" autocomplete="off"/></td>
            </tr>
          </table>
        </div>
      </div>

      <fieldset>
        <div class="modal-footer">
          <input name="_method" type="hidden" value="put" />
          <button type="submit" id="save-user-rights" name="save-user-rights" class="push btn btn-primary">Save</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
      </fieldset>
    </div>
  </div>
</div>