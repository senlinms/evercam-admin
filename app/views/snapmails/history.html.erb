<!-- BEGIN CONTENT -->

<div id="add-action" class="modal fade">
  <div class="vertical-alignment-helper">
    <div class="modal-dialog vertical-align-center" style="width:95%;">
      <div class="modal-content">
        <div class="modal-header">
          <div class="caption"><h2>Snapmail</h2></div>
        </div>
        <div class="modal-body">
          <div id="loading-popup"><img src="<%= image_path 'loader3.gif' %>"></div>
          <div id="snapmail-template"></div>
        </div>
        <fieldset>
          <div class="modal-footer">
            <button type="button" id="close-dialog-snapmail" class="btn btn-default pull-right btn-space" data-dismiss="modal">Close</button>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>

<div class="bb-alert alert alert-danger show-notifications" style="display: none;">
  <span></span>
</div>
<img src="<%= image_path 'loader3.gif' %>" id="ajx-wait" style="display:none" />
<div class="page-content-wrapper">
  <div class="page-content" id="cameras-report">
    <div class="row overlop-margin">
      <div class="dropdown-checklist" id="div-dropdown-checklist">
        <div href="#" class="btn btn-default grey" data-toggle="modal" data-target="#toggle-datatable-columns">
          <i class="fa fa-columns"></i>
        </div>
      </div>
    </div>
    <%= render 'columns_modal' %>
    <!-- BEGIN PAGE CONTENT-->
    <div id="merge-list-row" class="row dt-user-m">
      <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover archive-datatables" id="snapmails_history_datatables">
          <thead>
            <tr role="row" class="heading">
              <th name="order_sent_at" class="sorting">Sent At</th>
              <th name="order_recipients" class="sorting">Recipients</th>
              <th name="order_subject" class="sorting">Subject</th>
              <th name="order_email" class="sorting">Email</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    <!-- END PAGE CONTENT-->
  </div>
  </div>
</div>
<!-- END CONTENT -->

<script>
  $(document).ready(function () {
    window.initializeSnapmailHistory();
  });
</script>
