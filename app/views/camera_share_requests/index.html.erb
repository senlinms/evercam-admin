<%= content_for(:title, "Camera Share Requests") %>
<div class="page-content-wrapper">
  <div class="page-content">
    <div class="dropdown-checklist" id="div-dropdown-checklist">
      <div href="#" class="btn btn-default grey" data-toggle="modal" data-target="#toggle-datatable-columns">
        <i class="fa fa-columns"></i>
      </div>
    </div>
    <div class="row overlapping" style="width: 300px;margin-top: -34px;">
      <div class="form-merge-report">
        <div class="main-contains">
          <div class="filter-naming">
            Status :
          </div>
          <div class="inputs-divs">
            <div style="width: 85px; float: left;">
              <input type="checkbox" name="status-used" class="first-inps" data-val="used" id="status-used">
              <label style="margin-top: 4px;">Used</label>
            </div>
            <div style="width: 92px; float: left;">
              <input type="checkbox" name="status-cancelled" class="first-inps" id="status-used" data-val="cancelled">
              <label style="margin-top: 4px;">Cancelled</label>
            </div>
            <div style="width: 114px; float: left;">
              <input type="checkbox" name="status-pending" class="first-inps" id="status-used" data-val="pending" checked>
              <label style="margin-top: 4px;">Pending Only</label>
            </div>
            <div style="width: 114px; float: left;">
              <button class="clear-btn-f" id="btn-delete">Delete</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= render 'columns_modal' %>
    <div id="shares-list-row" class="row hide dt-user-m">
      <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover user-list-table sharess-datatables" id="shares_datatables">
          <thead>
          <tr role="row" class="heading">
            <th><input type="checkbox" id="chk_select_all"></th>
            <th name="order_username" class="sorting"> Sharee Email</th>
            <th name="order_name" class="sorting">Camera</th>
            <th name="order_email" class="sorting">Sharer</th>
            <th name="order_camera_count" class="sorting">Message</th>
            <th name="order_api_id" class="sorting">Rights</th>
            <th name="order_api_key" class="sorting">Status</th>
            <th name="order_registered" class="sorting datatable-date">Created At</th>
          </tr>
          </thead>
          <tbody>
          <%= render @share_requests %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    window.initializeShareRequests();
  });
</script>
