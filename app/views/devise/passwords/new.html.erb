<% provide(:title, "Evercam: Password Reset") %>

<div class="bb-alert alert alert-info" style="display:none;">
  <span></span>
</div>
<div class="container" id="pass-reset">
  <div class="branding margin-bottom-50">
    <%= link_to image_tag("new-logo.png", alt: "Evercam.io"), root_path %>
  </div>
  <div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 panel">
      <div class="col-md-12" id="user-settings"><h4>Forgotten Password</h4></div>
      <div class="col-md-11 col-xs-12 reset-password">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'center-block' }) do |f| %>
              <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter your email address' %>
          </div>
            <%= f.submit 'Reset', class:'btn btn-primary' %>
        <% end %>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-4 row text-center">
      <p><%= link_to "I've remembered my password", new_session_path(resource_name) %></p>
    </div>
  </div>
</div>

<script>
    Notification.init(".bb-alert");
    <% if flash[:message] %>
    Notification.show('<%= flash[:message] %>');
    <% end %>
</script>
