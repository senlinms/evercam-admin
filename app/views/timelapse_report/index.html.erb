<%= content_for(:title, "Timelapses") %>
<div class="bb-alert alert" style="display: none;"></div>
<img src="<%= image_path 'loading.gif' %>" id="api-wait" style="display:none" />
<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
  <div class="page-content" id="cameras-report">
    <!-- BEGIN PAGE HEADER-->
    <div class="row overlop-margin">
      <div class="dropdown-checklist" id="div-dropdown-checklist">
        <div href="#" class="btn btn-default grey" data-toggle="modal" data-target="#toggle-datatable-columns">
          <i class="fa fa-columns"></i>
        </div>
      </div>
    </div>
    <!-- END PAGE HEADER-->
    <%= render 'columns_modal' %>
    <!-- BEGIN PAGE CONTENT-->
    <div class="row overlapping">
      <div class="form-timelapse">
        <div class="main-contains">
          <div class="filter-naming">
            Search :
          </div>
          <div class="inputs-divs">
            <input type="text" class="first-inps" placeholder="Search Camera" id="camera-name" autocomplete="off">
            <input type="text" class="first-inps" placeholder="Search Onwer" id="owner" autocomplete="off">
            <input type="text" class="first-inps" placeholder="Search Title" id="title" autocomplete="off">
            <input type="text" class="first-inps" placeholder="Search Count" id="sp-count" autocomplete="off">
            <input type="text" class="first-inps" placeholder="Search Status" id="status" autocomplete="off">
          </div>
        </div>
      </div>
    </div>
    <%= render :partial => 'shared/adjust_horizontal_scroll' %>
    <div id="timelapse-list-row" class="row dt-user-m snapshots-list-row">
      <div class="col-md-12 filter-top">
        <table class="table table-striped table-bordered table-hover timelapse-datatables" id="timelapse_datatables">
          <thead>
            <tr role="row" class="heading">
              <th name="order_id" class="sorting">Id</th>
              <th name="order_access_token" class="sorting">Access Token</th>
              <th name="order_code" class="sorting">Code</th>
              <th name="order_camera_id" class="sorting">Camera</th>
              <th name="order_user_id" class="sorting">Owner</th>
              <th name="order_title" class="sorting">Title</th>
              <th name="order_file_size" class="sorting">File Size</th>
              <th name="order_created_at" class="sorting">Created at</th>
              <th name="order_resolution" class="sorting">Resolution</th>
              <th name="order_duration" class="sorting">Duration</th>
              <th name="order_interval" class="sorting">Interval</th>
              <th name="order_is_date_always" class="sorting">Is Date Always</th>
              <th name="order_is_time_always" class="sorting">Is Time Always</th>
              <th name="order_snapshot_count" class="sorting">Snapshot Count</th>
              <th name="order_status" class="sorting">Status</th>
              <th name="order_last_snap_date" class="sorting">Last Snap Date</th>
            </tr>
          </thead>
          <tbody>
            <%=  render "timelapse" %>
          </tbody>
        </table>
      </div>
    <!-- END PAGE CONTENT-->
  </div>
  </div>
</div>
<!-- END CONTENT -->
<script>
  $(document).ready(function () {
    window.initializeTimelapse();
  });
</script>
