<div id="toggle-datatable-columns" class="modal fade">
  <div class="modal-dialog" style="width:300px;">
    <div class="modal-content">
      <div class="modal-header">
        <div class="caption"><strong>Show/Hide Columns</strong></div>
        <div class="cancel">
          <a class="cancel_link" href="#" data-dismiss="modal">X</a>
        </div>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <div class="column-checkbox">
            <label><input class="snapmails-history-column" type="checkbox" data-val="0" checked> Created At</label>
          </div>
          <div class="column-checkbox">
            <label><input class="snapmails-history-column" type="checkbox" data-val="1"> Subject</label>
          </div>
          <div class="column-checkbox">
            <label><input class="snapmails-history-column" type="checkbox" data-val="2" checked> Cameras</label>
          </div>
          <div class="column-checkbox">
            <label><input class="snapmails-history-column" type="checkbox" data-val="3" checked> User</label>
          </div>
          <div class="column-checkbox">
            <label><input class="snapmails-history-column" type="checkbox" data-val="4" checked> Recipients</label>
          </div>
          <div class="column-checkbox">
            <label><input class="snapmails-history-column" type="checkbox" data-val="5" checked> Notify Days</label>
          </div>
          <div class="column-checkbox">
            <label><input class="snapmails-history-column" type="checkbox" data-val="6" checked> Notify Time</label>
          </div>
          <div class="column-checkbox">
            <label><input class="snapmails-history-column" type="checkbox" data-val="7" checked> Timezone</label>
          </div>
          <div class="column-checkbox">
            <label><input class="snapmails-history-column" type="checkbox" data-val="8" checked> Paused</label>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="pull-right">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
