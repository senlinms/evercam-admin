<%= content_for(:title, "Admins") %>
<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
  <div class="page-content" id="admins-report">
    <!-- BEGIN PAGE HEADER-->
    <div class="col-md-6 col-sm-12 lic-col-box">
      <div class="dropdown-checklist" id="div-dropdown-checklist">
        <div href="#" class="btn btn-default grey" data-toggle="modal" data-target="#toggle-datatable-columns">
          <i class="fa fa-columns"></i>
        </div>
      </div>
      <div href="#" class="btn btn-default grey licence-button" data-toggle="modal" data-target="#modal-make-admin">
        <i class="fa fa-plus"></i> Make New Admin
      </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <%= render 'columns_modal' %>
    <%= render 'add_admin_modal' %>
    <!-- BEGIN PAGE CONTENT-->
    <div id="merge-list-row" class="row dt-user-m">
      <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover archive-datatables" id="admin_datatables">
          <thead>
            <tr role="row" class="heading">
              <th name="order_username" class="sorting">Username</th>
              <th name="order_fullname" class="sorting">Full Name</th>
              <th name="order_email" class="sorting">Email</th>
              <th name="order_create_date" class="sorting">Created At</th>
              <th name="order_update_date" class="sorting">Updated At</th>
              <th name="order_last_sign_in" class="sorting">Last Sign In At</th>
              <th name="order_current_sign_in" class="sorting">Current Sign In</th>
              <th name="order_sign_in_count" class="sorting">Sign In Count</th>
              <th name="order_ip" class="sorting">Last Sign In IP</th>
              <th name="order_active" class="sorting">Active</th>
              <th name="order_edit" class="sorting"></th>
            </tr>
          </thead>
          <tbody>
            <%=  render "admin" %>
          </tbody>
        </table>
      </div>
    <!-- END PAGE CONTENT-->
  </div>
  </div>
</div>
<!-- END CONTENT -->

<script>
  $(document).ready(function () {
    window.initializeAdmins();
  });
</script>
