<%= content_for(:title, "Cameras") %>
<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
  <div class="page-content" id="cameras-report">
    <!-- BEGIN PAGE HEADER-->
    <div class="dropdown-checklist" id="div-dropdown-checklist">
      <div href="#" class="btn btn-default grey" data-toggle="modal" data-target="#toggle-datatable-columns">
        <i class="fa fa-columns"></i>
      </div>
    </div>
    <div class="table-actions-wrapper cameras-f">
      <div class="row overlapping">
        <div class="form-camera-report">
          <div class="filter-container">
            <div class="filter-naming">
              Search :
            </div>
            <div class="camera-inputs">
              <input type="text" class="first-inps" placeholder="ID" id="camera-id" autocomplete="off">
              <input type="text" class="first-inps" placeholder="Owner" id="owner" autocomplete="off">
              <input type="text" class="first-inps" placeholder="Camera Name" id="camera-name" autocomplete="off">
              <input type="text" class="first-inps" placeholder="Camera IP" id="camera-ip" autocomplete="off">
              <input type="text" class="first-inps" placeholder="Username" id="username" autocomplete="off">
              <input type="text" class="first-inps" placeholder="Password" id="password" autocomplete="off">
              <input type="text" class="first-inps" placeholder="Model" id="model" autocomplete="off">
              <input type="text" class="first-inps" placeholder="Vendor" id="vendor" autocomplete="off">
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <%= render 'columns_modal' %>
    <%= render :partial => 'shared/adjust_horizontal_scroll' %>
    <div id="cameras-list-row" class="row hide dt-user-m">
      <div class="col-md-12 filter-top-cam">
        <table class="table table-striped table-bordered table-hover" id="cameras_datatables">
          <thead>
            <tr role="row" class="heading">
              <th name="order_created" class="sorting datatable-date">Created At</th>
              <th name="order_id" class="sorting">ID</th>
              <th name="order_owner" class="sorting">Owner</th>
              <th name="order_name" class="sorting">Name</th>
              <th name="order_shares" class="sorting">Shares</th>
              <th name="order_camera_ip" class="sorting">Camera IP</th>
              <th name="order_http_port" class="sorting">Http Port</th>
              <th name="order_rtsp_port" class="sorting">Rtsp Port</th>
              <th name="order_username" class="sorting">Username</th>
              <th name="order_password" class="sorting">Password</th>
              <th name="order_mac" class="sorting">Mac Address</th>
              <th name="order_model" class="sorting">Model</th>
              <th name="order_vendor" class="sorting">Vendor</th>
              <th name="order_timezone" class="sorting">Timezone</th>
              <th name="order_public" class="sorting">Public</th>
              <th name="order_online" class="sorting">Online</th>
              <th name="order_is_recording" class="sorting">Recording Status</th>
              <th name="order_polled" class="sorting datatable-date">Last Polled</th>
            </tr>
          </thead>
          <tbody>

          </tbody>
        </table>
      </div>
    </div>
    <!-- END PAGE CONTENT-->
  </div>
</div>
<!-- END CONTENT -->

<script>
  $(document).ready(function () {
    window.initializeCameras();
  });
</script>
