<%= content_for(:title, "Snapmails") %>
<div class="page-content-wrapper">
  <div class="page-content" id="cameras-report">
    <div class="row overlop-margin">
      <div class="dropdown-checklist" id="div-dropdown-checklist">
        <div href="#" class="btn btn-default grey" data-toggle="modal" data-target="#toggle-datatable-columns">
          <i class="fa fa-columns"></i>
        </div>
      </div>
    </div>
    <%= render 'modal_columns' %>
    <!-- BEGIN PAGE CONTENT-->
    <div id="merge-list-row" class="row dt-user-m">
      <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover archive-datatables" id="snapmails_datatables">
          <thead>
            <tr role="row" class="heading">
              <th name="order_sent_at" class="sorting">Created At</th>
              <th name="order_subject" class="sorting">Subject</th>
              <th name="order_cameras" class="sorting">Cameras</th>
              <th name="order_user" class="sorting">User</th>
              <th name="order_recipients" class="sorting">Recipients</th>
              <th name="order_notify_days" class="sorting">Notify Days</th>
              <th name="order_notify_time" class="sorting">Notiy Time</th>
              <th name="order_timezone" class="sorting">Timezone</th>
              <th name="order_is_paused" class="sorting">Paused</th>
            </tr>
          </thead>
          <tbody>
            <%= render "snapmails" %>
          </tbody>
        </table>
      </div>
    <!-- END PAGE CONTENT-->
  </div>
  </div>
</div>
<!-- END CONTENT -->
<script>
  $(document).ready(function () {
    window.initializeSnapmails();
  });
</script>
