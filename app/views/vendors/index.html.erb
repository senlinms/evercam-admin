<%= content_for(:title, "Vendors") %>
<div class="bb-alert alert alert-info" style="display:none;">
  <span></span>
</div>
<div class="page-content-wrapper">
  <div class="page-content">
    <div class="col-md-6 col-sm-12 lic-col-box">
      <div class="dropdown-checklist" id="div-dropdown-checklist">
        <div href="#" class="btn btn-default grey" data-toggle="modal" data-target="#toggle-datatable-columns">
          <i class="fa fa-columns"></i>
        </div>
      </div>
      <div href="#" class="btn btn-default grey vendor-button" data-toggle="modal" data-target="#add-vendor">
        <i class="fa fa-plus"></i> Add Vendor
      </div>
    </div>
    <%= render 'vendor_modal' %>

    <%= render 'columns_modal' %>
    <div id="vendor-list-row" class="row hide dt-user-m">
      <input type="hidden" id="total_vendors" value=""/>
      <input type="hidden" id="total_cameras" value=""/>
      <div class="col-md-12 table-container">
        <table class="table table-striped table-bordered table-hover" id="datatable_vendors">
          <thead>
          <tr role="row" class="heading">
            <th name="order_vendor_logo" class="sorting">Logo</th>
            <th name="order_vendor_id" class="sorting">ID</th>
            <th name="order_vendor_name" class="sorting">Vendor</th>
            <th name="order_known_macs" class="sorting">Known Macs</th>
          </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
    $(document).ready(function () {
        window.initializeVendors();
    });
</script>