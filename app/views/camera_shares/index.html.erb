<%= content_for(:title, "Camera Shares") %>
<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
  <div class="page-content" id="cameras-report">
    <!-- BEGIN PAGE HEADER-->
    <div class="row overlapping">
      <div class="form-mains">
        <div class="main-contains">
          <div class="filter-naming">
            Search :
          </div>
          <div class="inputs-divs">
            <input type="text" class="first-inps" placeholder="Search Camera" id="camera-exid" autocomplete="off">
            <input type="text" class="first-inps" placeholder="Search Sharer" id="sharer-fullname" autocomplete="off">
            <input type="text" class="first-inps" placeholder="Search Sharee" id="sharee-fullname" autocomplete="off">
            <button type="button" class="clear-btn-f" id="filterClear">Clear Filter</button>
          </div>
        </div>
      </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <%= render :partial => 'shared/adjust_horizontal_scroll' %>
    <div id="cameras-list-row" class="row dt-user-m">
      <div class="col-md-12 filter-top-cam">
        <table class="table table-striped table-bordered table-hover" id="camera_shares_datatables">
          <thead>
            <tr role="row" class="heading">
              <th name="order_create_date" class="sorting">Created At</th>
              <th name="order_camera" class="sorting">Camera</th>
              <th name="order_user" class="sorting">Sharer</th>
              <th name="order_sharer" class="sorting">Sharee</th>
              <th name="order_kind" class="sorting">Kind</th>
            </tr>
          </thead>
          <tbody>

          </tbody>
        </table>
      </div>
    </div>
    <!-- END PAGE CONTENT-->
  </div>
</div>
<!-- END CONTENT -->
<script>
  $(document).ready(function () {
    window.initializeCameraShares();
  });
</script>
