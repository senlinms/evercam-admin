<div id="modal-add-cr" class="modal fade modal-add-cr" data-backdrop="static" data-keyboard="false">
  <div class="vertical-alignment-helper">
    <div class="modal-dialog vertical-align-center" style="width:550px;">
      <div class="modal-content">
        <div class="modal-header">
          <div class="caption"><strong>Cloud Recordings</strong></div>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label class="control-label">Status:</label>
           <div class="col-10">
            <select id="cloud-recording-status" class="form-control">
                <option value="on">On</option>
                <option value="on-scheduled">On Scheduled</option>
                <option value="off">Off</option>
                <option value="paused">Paused</option>
            </select>
           </div>
          </div>
          <div class="form-group">
            <label class="control-label">Storage Duration:</label>
            <div class="col-10">
              <select id="cloud-recording-duration" class="form-control">
                <option value="1">24 hours recording</option>
                <option value="7">7 days recording</option>
                <option value="30">30 days recording</option>
                <option value="90">90 days recording</option>
                <option value="-1">Infinity</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label">Frequency:</label>
            <div class="col-10">
              <select id="cloud-recording-frequency" class="form-control">
                <option value="60">60 (1 per second)</option>
                <option value="30">30 (1 every 2 seconds)</option>
                <option value="12">12 (1 every 5 seconds)</option>
                <option value="6">6 (1 every 10 seconds)</option>
                <option value="1">1 (1 every 60 seconds)</option>
                <option value="5">1 (1 every 5 minutes)</option>
                <option value="10">1 (1 every 10 minutes)</option>
              </select>
            </div>
          </div>
          <div class="form-group show-schedule">
            <label class="control-label">Schedule:</label>
            <div class="col-10">
              <div class="cloud-recording-calendar">
                <span id="cloud-recording-collaps"><span class="glyphicon glyphicon-chevron-down"></span></span>
              </div>
            </div>
          </div>
          <input type="hidden" value="" id="camera-exid">
          <input type="hidden" value="" id="camera-api-id">
          <input type="hidden" value="" id="camera-api-key">
          <input type="hidden" value="" id="evercam-server">
          <input type="hidden" value="" id="camera-schedule">
        </div>
        <div class="modal-footer">
          <div class="pull-right">
            <button type="button" class="btn btn-default grey" id="save-cr">Save</button>
            <button type="button" class="close-cr-modal btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
