<%= content_for(:title, "Camera Share Requests") %>
<div class="page-content-wrapper">
  <div class="page-content">
    <div class="dropdown-checklist" id="div-dropdown-checklist">
      <div href="#" class="btn btn-default grey" data-toggle="modal" data-target="#toggle-datatable-columns">
        <i class="fa fa-columns"></i>
      </div>
    </div>
    <%= render 'columns_modal' %>
    <div id="shares-list-row" class="row hide dt-user-m">
      <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover user-list-table sharess-datatables" id="shares_datatables">
          <thead>
          <tr role="row" class="heading">
            <th name="order_username" class="sorting"> Sharee Email</th>
            <th name="order_name" class="sorting">Camera</th>
            <th name="order_email" class="sorting">Sharer</th>
            <th name="order_camera_count" class="sorting">Message</th>
            <th name="order_api_id" class="sorting">Rights</th>
            <th name="order_api_key" class="sorting">Status</th>
            <th name="order_registered" class="sorting datatable-date">Created At</th>
          </tr>
          </thead>
          <tbody>
          <%= render @share_requests %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    window.initializeShareRequests();
  });
</script>
