<%= content_for(:title, "Intercom Companies") %>
<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
  <div class="page-content" id="intercom-companies-report">
    <div class="bb-alert alert alert-info" style="display:none;">
      <span></span>
    </div>
    <div id="btn_add_company" href="#" class="btn btn-default grey" data-toggle="modal" data-target="#add_edit_company_modal">
      <i class="fa fa-plus"></i> Add Company
    </div>

    <!-- BEGIN PAGE CONTENT-->
    <%= render 'company_add_edit_modal' %>
    <div id="companies-list-row" class="row dt-user-m">
      <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover" id="companies_datatables">
          <thead>
            <tr role="row" class="heading">
              <th name="order_id" class="sorting">Company ID</th>
              <th name="order_name" class="sorting">Name</th>
              <th name="order_session_count" class="sorting">session_count</th>
              <th name="order_user_count" class="sorting">user_count</th>
              <th name="order_updated" class="sorting">Updated At</th>
              <th name="order_created" class="sorting">Created At</th>
              <th name="order_action" class="sorting">Action</th>
            </tr>
          </thead>
          <tbody>
          <%=  render "intercom_company" %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- END PAGE CONTENT-->
  </div>
</div>
<!-- END CONTENT -->

<script>
  $(document).ready(function () {
    window.initializeIntercom();
  });
</script>
